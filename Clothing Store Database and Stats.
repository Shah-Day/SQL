--Display the database ordered by Stock

Select * FROM Gamer_Lounge_Wear ORDER BY stock;

--Display the database ordered by Rating

Select * FROM Gamer_Lounge_Wear ORDER BY rating desc;

--What are the least popular items?

Select Name, size, rating FROM Gamer_lounge_Wear ORDER BY rating asc limit 10; 


